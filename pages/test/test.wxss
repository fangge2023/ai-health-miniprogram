/* pages/test/test.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.message {
  display: block;
  font-size: 36rpx;
  color: #4CAF50;
  text-align: center;
  margin-bottom: 20rpx;
}

.timestamp {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.test-btn {
  background: #4CAF50;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.info {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}