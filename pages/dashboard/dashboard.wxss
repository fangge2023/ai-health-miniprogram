.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 24px;
}

/* 顶部用户信息 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 16px;
  background-color: #4CAF50;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  overflow: hidden;
  background-color: #e0e0e0;
  border: 2px solid rgba(255, 255, 255, 0.5);
  margin-right: 12px;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.hello {
  font-size: 14px;
  opacity: 0.9;
}

.username {
  font-size: 18px;
  font-weight: 600;
}

.date-info {
  text-align: right;
}

.today-date {
  font-size: 14px;
  opacity: 0.9;
}

/* 健康数据概览卡片 */
.health-overview {
  background-color: white;
  border-radius: 12px;
  margin: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.card-subtitle {
  font-size: 12px;
  color: #666;
}

.health-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 16px;
}

.stat-item {
  display: flex;
  align-items: center;
  padding: 12px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

.stat-icon {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-size: 20px;
}

.calories-icon {
  background-color: #FFEBEE;
}

.steps-icon {
  background-color: #E8F5E9;
}

.water-icon {
  background-color: #E3F2FD;
}

.weight-icon {
  background-color: #FFF8E1;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.stat-label {
  font-size: 12px;
  color: #666;
}

/* 减重进度卡片 */
.weight-progress-card {
  background-color: white;
  border-radius: 12px;
  margin: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.weight-chart {
  margin-top: 8px;
}

.weight-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}

.weight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weight-label {
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
}

.weight-value {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.progress-container {
  margin-top: 8px;
}

.progress-bar {
  height: 8px;
  background-color: #e9e9e9;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 8px;
}

.progress-fill {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 4px;
}

.progress-text {
  font-size: 12px;
  color: #666;
  text-align: right;
}

/* 快捷功能卡片 */
.quick-actions {
  background-color: white;
  border-radius: 12px;
  margin: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.action-row {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-gap: 12px;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  font-size: 24px;
}

.food-icon {
  background-color: #FFEBEE;
}

.exercise-icon {
  background-color: #E8F5E9;
}

.water-add-icon {
  background-color: #E3F2FD;
}

.weight-add-icon {
  background-color: #FFF8E1;
}

.action-text {
  font-size: 12px;
  color: #333;
}

/* 健康提示卡片 */
.health-tips {
  background-color: white;
  border-radius: 12px;
  margin: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.refresh-tips {
  font-size: 14px;
  color: #4CAF50;
}

.tip-content {
  display: flex;
  align-items: flex-start;
  background-color: #f9f9f9;
  padding: 12px;
  border-radius: 8px;
}

.tip-icon {
  font-size: 20px;
  margin-right: 12px;
}

.tip-text {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

/* 每周趋势卡片 */
.weekly-trends {
  background-color: white;
  border-radius: 12px;
  margin: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.view-more {
  font-size: 14px;
  color: #4CAF50;
}

.chart-container {
  height: 180px;
  margin-top: 8px;
}

.chart-placeholder {
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.bar-chart {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
  height: 100%;
}

.chart-bar {
  width: 12%;
  background-color: #E8F5E9;
  border-radius: 4px 4px 0 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.chart-bar.active {
  background-color: #4CAF50;
}

.bar-label {
  font-size: 12px;
  color: #666;
  margin-bottom: 8px;
}