/* pages/diet/diet.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
  background-color: #f5f5f5;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.date-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f8f0;
  color: #4CAF50;
  border: none;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  background-color: #e8f5e8;
}

.date-display {
  text-align: center;
  flex: 1;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.date-desc {
  font-size: 24rpx;
  color: #999;
}

/* 热量统计卡片 */
.calorie-summary {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  color: #fff;
  margin-bottom: 30rpx;
}

.summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.summary-item {
  text-align: center;
  flex: 1;
}

.item-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.item-label {
  font-size: 20rpx;
  opacity: 0.9;
}

.summary-divider {
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 20rpx;
}

.summary-item.negative .item-value {
  color: #ffcdd2;
}

.summary-item.positive .item-value {
  color: #c8e6c9;
}

/* 热量进度条 */
.calorie-progress {
  margin-top: 20rpx;
}

.progress-bar-container {
  height: 20rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-bar {
  height: 100%;
  position: absolute;
  top: 0;
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.progress-bar.consumed {
  background-color: #FF6B6B;
  z-index: 1;
}

.progress-bar.burned {
  background-color: #4ECDC4;
  z-index: 2;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  opacity: 0.8;
}

/* 营养素统计 */
.nutrition-stats {
  margin-bottom: 30rpx;
}

.stats-toggle {
  display: flex;
  gap: 20rpx;
}

.toggle-item {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  cursor: pointer;
}

.toggle-item.active {
  color: #4CAF50;
  background-color: #e8f5e8;
}

.nutrition-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.nutrition-item {
  text-align: center;
}

.nutrition-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: relative;
  margin: 0 auto 15rpx;
  background: conic-gradient(var(--color) 0deg, var(--color) calc(var(--progress) * 3.6deg), #e0e0e0 calc(var(--progress) * 3.6deg));
}

.nutrition-circle.carbs {
  --color: #FF9800;
}

.nutrition-circle.protein {
  --color: #2196F3;
}

.nutrition-circle.fat {
  --color: #9C27B0;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin: 8rpx;
  width: calc(100% - 16rpx);
  height: calc(100% - 16rpx);
}

.circle-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.nutrition-label {
  font-size: 22rpx;
  color: #666;
}

/* 餐次列表 */
.meals-container {
  margin-bottom: 30rpx;
}

.meal-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.meal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.meal-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.meal-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.meal-details {
  flex: 1;
}

.meal-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.meal-calories {
  font-size: 24rpx;
  color: #666;
}

.meal-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.add-food-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  line-height: 1;
}

.expand-icon {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
  transform: rotate(-90deg);
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(0deg);
}

/* 食物列表 */
.food-list {
  transition: all 0.3s ease;
  overflow: hidden;
}

.food-list.show {
  max-height: 2000rpx;
}

.food-list.hide {
  max-height: 0;
}

.food-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.food-item:last-child {
  border-bottom: none;
}

.food-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.food-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.food-details {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.food-amount {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 3rpx;
}

.food-calories {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

.food-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: none;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.edit {
  background-color: #f0f8f0;
  color: #4CAF50;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #F44336;
}

/* 空状态 */
.empty-meal {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
}

.empty-text {
  font-size: 26rpx;
  display: block;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 快捷添加 */
.quick-add-section {
  margin-bottom: 100rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-foods {
  white-space: nowrap;
}

.quick-food-item {
  display: inline-block;
  text-align: center;
  margin-right: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 160rpx;
  transition: transform 0.2s;
}

.quick-food-item:active {
  transform: scale(0.95);
}

.quick-food-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin: 0 auto 15rpx;
  background-color: #f5f5f5;
}

.quick-food-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.quick-food-calories {
  font-size: 20rpx;
  color: #4CAF50;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-main {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  font-size: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-main.expanded {
  transform: rotate(45deg);
  background-color: #45a049;
}

.fab-icon {
  line-height: 1;
}

.fab-options {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  transition: all 0.3s ease;
  transform-origin: bottom right;
}

.fab-options.show {
  opacity: 1;
  transform: scale(1);
}

.fab-options.hide {
  opacity: 0;
  transform: scale(0.5);
  pointer-events: none;
}

.fab-option {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: none;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  font-size: 24rpx;
}

.option-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.option-text {
  color: #333;
}

/* 搜索弹窗 */
.food-search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  transition: all 0.3s ease;
}

.food-search-modal.show {
  opacity: 1;
  visibility: visible;
}

.food-search-modal.hide {
  opacity: 0;
  visibility: hidden;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 20%;
  left: 5%;
  right: 5%;
  bottom: 5%;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.search-input-wrapper {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.search-input:focus {
  border-color: #4CAF50;
}

.search-btn {
  padding: 20rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.search-results {
  flex: 1;
  overflow-y: auto;
}

.search-result-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.search-result-item:active {
  background-color: #f5f5f5;
}

.result-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.result-info {
  flex: 1;
}

.result-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.result-calories {
  font-size: 22rpx;
  color: #4CAF50;
  display: block;
  margin-bottom: 3rpx;
}

.result-brand {
  font-size: 20rpx;
  color: #999;
}

.result-action {
  padding: 15rpx 25rpx;
  background-color: #f0f8f0;
  color: #4CAF50;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.search-empty {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.create-custom-btn {
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 480px) {
  .summary-row {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .summary-divider {
    transform: rotate(90deg);
    margin: 10rpx 0;
  }
  
  .nutrition-grid {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .nutrition-item {
    display: flex;
    align-items: center;
    gap: 30rpx;
  }
  
  .nutrition-circle {
    width: 100rpx;
    height: 100rpx;
    margin: 0;
  }
}