/* pages/exercise/exercise.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
  background-color: #f5f5f5;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.date-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f8f0;
  color: #4CAF50;
  border: none;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  background-color: #e8f5e8;
}

.date-display {
  text-align: center;
  flex: 1;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.date-desc {
  font-size: 24rpx;
  color: #999;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  margin-bottom: 30rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
}

.achievement-badge {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 3rpx;
}

.stat-unit {
  font-size: 18rpx;
  opacity: 0.8;
}

/* 目标进度 */
.goal-progress {
  margin-top: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: bold;
}

.progress-bar-container {
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-bar {
  height: 100%;
  background-color: #fff;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.progress-goal {
  font-size: 20rpx;
  opacity: 0.8;
  text-align: center;
}

/* 快捷运动区域 */
.quick-exercise-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #4CAF50;
  cursor: pointer;
}

.exercise-scroll {
  white-space: nowrap;
}

.exercise-grid {
  display: inline-flex;
  gap: 20rpx;
  padding: 0 5rpx;
}

.exercise-item {
  display: inline-block;
  text-align: center;
  padding: 30rpx 25rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 160rpx;
  transition: transform 0.2s;
}

.exercise-item:active {
  transform: scale(0.95);
}

.exercise-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
  display: block;
}

.exercise-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.exercise-met {
  font-size: 20rpx;
  color: #FF6B6B;
  background-color: #fff5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 运动计时器 */
.timer-section {
  margin-bottom: 30rpx;
}

.timer-card {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  color: #fff;
}

.timer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.timer-title {
  font-size: 28rpx;
  font-weight: bold;
}

.stop-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.timer-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.timer-time {
  font-size: 72rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
  font-family: 'Courier New', monospace;
}

.timer-calories {
  font-size: 24rpx;
  opacity: 0.9;
}

.timer-controls {
  text-align: center;
}

.timer-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: transparent;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  transition: all 0.3s ease;
}

.timer-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
}

/* 记录区域 */
.records-section {
  margin-bottom: 30rpx;
}

.view-toggle {
  display: flex;
  gap: 20rpx;
}

.toggle-item {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  cursor: pointer;
}

.toggle-item.active {
  color: #4CAF50;
  background-color: #e8f5e8;
}

/* 记录列表 */
.records-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.record-details {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.detail-item {
  font-size: 20rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.record-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: none;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.edit {
  background-color: #f0f8f0;
  color: #4CAF50;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #F44336;
}

/* 空状态 */
.empty-records {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 图表容器 */
.chart-container {
  height: 300rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.records-chart .chart-container {
  margin-bottom: 20rpx;
}

/* 历史统计 */
.history-stats {
  margin-bottom: 30rpx;
}

.weekly-chart .chart-container {
  height: 250rpx;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-main {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #FF6B6B;
  color: #fff;
  border: none;
  font-size: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-main.expanded {
  transform: rotate(45deg);
  background-color: #ff5722;
}

.fab-icon {
  line-height: 1;
}

.fab-options {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  transition: all 0.3s ease;
  transform-origin: bottom right;
}

.fab-options.show {
  opacity: 1;
  transform: scale(1);
}

.fab-options.hide {
  opacity: 0;
  transform: scale(0.5);
  pointer-events: none;
}

.fab-option {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: none;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  font-size: 24rpx;
}

.option-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.option-text {
  color: #333;
}

/* 运动详情弹窗 */
.exercise-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  transition: all 0.3s ease;
}

.exercise-modal.show {
  opacity: 1;
  visibility: visible;
}

.exercise-modal.hide {
  opacity: 0;
  visibility: hidden;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.exercise-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.duration-input {
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.input-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.duration-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
}

.duration-value {
  width: 120rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 15rpx;
}

.duration-unit {
  font-size: 24rpx;
  color: #666;
}

.estimated-calories {
  text-align: center;
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background-color: #4CAF50;
  color: #fff;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 480px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .exercise-grid {
    gap: 15rpx;
  }
  
  .exercise-item {
    width: 140rpx;
    padding: 25rpx 20rpx;
  }
  
  .record-details {
    gap: 15rpx;
  }
  
  .modal-content {
    max-height: 85vh;
  }
}